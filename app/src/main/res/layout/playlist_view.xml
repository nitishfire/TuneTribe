<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="5dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardBackgroundColor="@color/sign_log_background_color"
    app:cardCornerRadius="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/plimagePV"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/black_reactangle"/>

    <TextView
        android:id="@+id/playlistNamePV"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/songDuration"
        android:layout_toEndOf="@id/imageMV"
        android:fontFamily="@font/cen_got_bold"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="songname"
        android:textColor="#FEFEFE" />


    <ImageButton
        android:id="@+id/dustbinPV"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginHorizontal="5dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transperent"
        android:fontFamily="@font/cen_got_bold"
        android:gravity="center"
        android:src="@drawable/delete_button_icon"
        android:textColor="#FEFEFE"
        tools:ignore="SpeakableTextPresentCheck" />

</com.google.android.material.card.MaterialCardView>
